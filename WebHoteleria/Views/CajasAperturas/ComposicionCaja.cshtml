                                                            <td>@datos.Monto</td>
                                                            <td class="colCantidad">@Html.TextBox("txtField" + datos.IdTipoDenominacion.ToString(), datos.Cantidad, new { @class = "integer" })</td>
                                                            <td class="col1">@datos.SubTotal</td>
                                                        </tr>
                                                    }
