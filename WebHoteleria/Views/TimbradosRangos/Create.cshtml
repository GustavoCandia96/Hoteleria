                        <div class="form-group">
                            @Html.Label("* Punto Expedición", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.PuntoExpedicion, null, new { @class = "form-control has-feedback-left" })
                                <span class="fa fa-sort-numeric-desc form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.PuntoExpedicion)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("* Desde", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Desde, null, new { @class = "form-control has-feedback-left" })
                                <span class="fa fa-sort-numeric-asc form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.Desde)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("* Hasta", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Hasta, null, new { @class = "form-control has-feedback-left" })
                                <span class="fa fa-sort-numeric-asc form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.Hasta)
                            </div>
                        </div>

                    </div>

                </div>
            </div>

            <div class="form-group">
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
                        <input type="submit" value="Guardar" id="btnGuardar" class="btn btn-success" />
                    </div>
                </div>
            </div>

        </div>
    </div>
}
