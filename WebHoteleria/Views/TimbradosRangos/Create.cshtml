@model WebHoteleria.Models.TimbradoRangoModel

<script type="text/javascript">

    $(document).ready(function () {

        $("#IdTimbradoTipoDocumento").change(function () {
            var idTimbradoFormato = $("#IdTimbradoFormato").val();
            var idTimbradoTipoDocumento = $("#IdTimbradoTipoDocumento").val();
            if (idTimbradoTipoDocumento != "") {
                if (idTimbradoFormato != "") {
                    $.ajax({
                        url: '/Timbrados/ObtenerListadoTimbrados',
                        type: 'POST',
                        data: {
                            timbradoFormatoId: idTimbradoFormato,
                            timbradoTipoDocumentoId: idTimbradoTipoDocumento,
                        }
                    }).done(function (response) {
                        $("[name = IdTimbrado]").html(response);
                        $("[name = IdTimbrado]").prepend("<option value='' selected='selected'>--Seleccionar--</option>");
                    });
                } else {
                    alertaSoloMensaje("Seleccione el formato del timbrado");
                    $("#IdTimbradoTipoDocumento").val("");
                }
            }
        });

    });

    function alertaSoloMensaje(mensaje) {
        bootbox.alert({
            title: "<strong>Alerta</strong>",
            message: mensaje,
            size: 'medium'
        });
    }

</script>

<div class="page-title">
    <div class="title_left">
        <h3>Crear nuevo rango timbrado <small></small></h3>
    </div>
</div>

@using (Html.BeginForm("Create", "TimbradosRangos", FormMethod.Post, new { id = "frmCrearTimbradoRango" }))
{
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
