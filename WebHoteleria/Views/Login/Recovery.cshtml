@model WebHoteleria.Models.UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {

    });

</script>

<div class="page-title">
    <div class="title_left">
        <h3>Recuperación de contraseña <small></small></h3>
    </div>
</div>

@using (Html.BeginForm("Recovery", "Login", FormMethod.Post, new { id = "frmNuevoPasswordUsuario" }))
{
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    @if (@ViewBag.msg != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade in">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            @Html.ValidationMessage("Duplicado")
                            @Html.ValidationMessage("Error")
                        </div>
                    }

                    @Html.HiddenFor(model => model.Id)

                    @Html.HiddenFor(model => model.IdPerfil)
                    @Html.HiddenFor(model => model.Usuario)
                    @Html.HiddenFor(model => model.Email)
                    @Html.HiddenFor(model => model.Estado)

                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.Label("* Nueva Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Clave, null, new { @class = "form-control has-feedback-left", @type = "password" })
                                <span class="fa fa-key form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.Clave)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("* Repetir Nueva Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.RepetirClave, null, new { @class = "form-control has-feedback-left", @type = "password" })
                                <span class="fa fa-key form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.RepetirClave)
                            </div>
                        </div>

                    </div>

                </div>
            </div>

            <div class="form-group">
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
                        <input type="submit" value="Guardar" id="btnGuardar" class="btn btn-success" />
                    </div>
                </div>
            </div>

        </div>
    </div>
}