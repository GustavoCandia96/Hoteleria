@model WebHoteleria.Models.CajaModel

<script type="text/javascript">

    $(document).ready(function () {

        $("#btnGuardar").click(function () {
            $("#btnGuardar").css("display", "none");
            $("#frmEditarCaja").submit();
        });

    });

    function alertaSoloMensaje(mensaje) {
        bootbox.alert({
            title: "<strong>Alerta</strong>",
            message: mensaje,
            size: 'medium'
        });
    }

</script>

<div class="page-title">
    <div class="title_left">
        <h3>Editar caja <small></small></h3>
    </div>
</div>

@using (Html.BeginForm("Edit", "Cajas", FormMethod.Post, new { id = "frmEditarCaja" }))
{
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    @if (@ViewBag.msg != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade in">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            @Html.ValidationMessage("Duplicado")
                            @Html.ValidationMessage("Error")
                        </div>
                    }

                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.IdSucursal)
                    @Html.HiddenFor(model => model.IdMoneda)

                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.Label("* Sucursales", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.NombreSucursal, null, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.NombreSucursal, "", new { @style = "color:red" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("* Monedas", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.NombreMoneda, null, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.NombreMoneda, "", new { @style = "color:red" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("* Usuario / Funcionario", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DropDownListFor(model => model.IdUsuario, null, "--Seleccionar--", new { @class = "form-control has-feedback-left" })
                                <span class="fa fa-unsorted form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.IdUsuario, "", new { @style = "color:red" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("* Denominación", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.Denominacion, null, new { @class = "form-control has-feedback-left" })
                                <span class="fa fa-pencil form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.Denominacion, "", new { @style = "color:red" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("* Estado", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DropDownListFor(model => model.EstadoDescrip, null, new { @class = "form-control has-feedback-left" })
                                <span class="fa fa-unsorted form-control-feedback left" aria-hidden="true"></span>
                                @Html.ValidationMessageFor(m => m.EstadoDescrip)
                            </div>
                        </div>

                    </div>

                </div>
            </div>

            <div class="form-group">
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
                        <input type="button" value="Guardar" id="btnGuardar" class="btn btn-success" />
                    </div>
                </div>
            </div>

        </div>
    </div>
}

