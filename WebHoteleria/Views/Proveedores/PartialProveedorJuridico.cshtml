@model WebHoteleria.Models.ProveedorModel

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
    ViewBag.Title = "Index";
}

<div class="form-group">
    @Html.Label("* Razon Social", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-6">
        @Html.TextBoxFor(model => model.RazonSocial, null, new { @class = "form-control has-feedback-left", required = "required" })
        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
        @Html.ValidationMessageFor(m => m.RazonSocial)
    </div>
</div>

